rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['name', 'className', 'school'])
                    && request.resource.data.name is string
                    && request.resource.data.name.size() >= 1
                    && request.resource.data.name.size() <= 30
                    && request.resource.data.className is string
                    && request.resource.data.className.size() <= 10
                    && request.resource.data.school is string
                    && request.resource.data.school.size() <= 100;
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['name', 'className', 'school', 'updatedAt']);
    }
    match /scores/{scoreId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null
                            && request.resource.data.uid == request.auth.uid
                            && scoreId.matches(request.auth.uid + '_.*')
                            && request.resource.data.score is number
                            && request.resource.data.score >= 0
                            && request.resource.data.score <= 200
                            && (!exists(resource) || request.resource.data.score >= resource.data.score)
                            && request.resource.data.level in ['maluch', 'zaczek']
                            && request.resource.data.mode in ['exam', 'practice', 'random'];
    }
    match /aggregates/{aggId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null
                            && request.resource.data.uid == request.auth.uid
                            && aggId.matches(request.auth.uid + '_.*')
                            && request.resource.data.level in ['maluch', 'zaczek'];
    }
  }
}